  "Resources": {
    "DDBUsersTable":{
      "Type":"AWS::DynamoDB::Table",
      "Properties":{
        "AttributeDefinitions" : [
          {
            "AttributeName" : "Email",
            "AttributeType" : "S"
          }
        ],
        "KeySchema" : [
          {
            "AttributeName" : "Email",
            "KeyType" : "HASH"
          }
        ],
        "ProvisionedThroughput" : {
          "ReadCapacityUnits" : "5",
          "WriteCapacityUnits" : "5"
        },
        "TableName" : {"Ref" :"DDBUserTable"}
      }
    },
    "RoleCreateUser": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "",
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "CreateUser",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": [
                    "dynamodb:PutItem"
                  ],
                  "Effect": "Allow",
                  "Resource": [
                    { "Fn::Join" : [ "", ["arn:aws:dynamodb:us-east-1:778539567203:table/", { "Ref" : "DDBUserTable" }]]}
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "ses:SendEmail",
                    "ses:SendRawEmail"
                  ],
                  "Resource": "*"
                },
                {
                  "Sid": "",
                  "Resource": "*",
                  "Action": [
                    "logs:*"
                  ],
                  "Effect": "Allow"
                }
              ]
            }
          }
        ]
      }
    },
    "LambdaCreateUser": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "ZipFile": "file//./CreateUser.zip"
        },
        "Description": "Lambda for creating users",
        "Handler": "index.handler",
        "MemorySize": 128,
        "Role": {"Fn::GetAtt" : ["RoleCreateUser", "Arn"] },
        "Runtime": "nodejs",
        "Timeout": 3
      },
      "DependsOn": [
        "RoleCreateUser"
      ]
    },
    "RoleVerifyUser": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "",
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "VerifyUser",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": [
                    "dynamodb:GetItem",
                    "dynamodb:UpdateItem"
                  ],
                  "Effect": "Allow",
                  "Resource": [
                    { "Fn::Join" : [ "", ["arn:aws:dynamodb:us-east-1:778539567203:table/", { "Ref" : "DDBUserTable" }]]}
                  ]
                },
                {
                  "Sid": "",
                  "Resource": "*",
                  "Action": [
                    "logs:*"
                  ],
                  "Effect": "Allow"
                }
              ]
            }
          }
        ]
      }
    }
  }
}