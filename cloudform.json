{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description":"Builds a serverless authentication structure",
  "Parameters":{
    "Environment":{
      "Description":"Environment for this stack",
      "Type":"String",
      "Default":"Development",
      "AllowedValues" : [
        "Development",
        "Beta",
        "Staging",
        "Production"
      ]
    },
    "DDBUserTable":{
      "Description":"Enter the name of the users Table",
      "Type":"String",
      "Default":"UsersDevelopment"
    }
  },
  "Metadata": {
